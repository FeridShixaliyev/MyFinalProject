@model Person
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row" style="margin-top:9rem">
        <div class="col-lg-12" style="margin:50px;text-align:center">
            <h1>Create Person</h1>
        </div>
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <input asp-for="Fullname" class="form-control" placeholder="Fullname" style="border:1px solid red">
                    <span asp-validation-for="Fullname"></span>
                </div>
                <div class="mb-3">
                    <input asp-for="Level" class="form-control" placeholder="Level" style="border:1px solid red">
                    <span asp-validation-for="Level"></span>
                </div>
                <div class="mb-3">
                    <input asp-for="ImageFile" class="form-control" accept="image/*" placeholder="ImageFile">
                    <span asp-validation-for="ImageFile"></span>
                </div>
                <div class="mb-3">
                    <div asp-validation-summary="ModelOnly"></div>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
        <div class="col-lg-3"></div>

    </div>
</div>

