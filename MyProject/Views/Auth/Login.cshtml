@using MyProject.ViewModels
@model LoginVM
@{
    ViewData["Title"] = "Login";
}

<div class="container"style="background-color: #c5c5c5;">
    <div class="row" style="margin-top:9rem">
        <div class="col-lg-12" style="margin:50px;text-align:center">
            <h1>Login</h1>
        </div>
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <form method="post">
                <div class="mb-3">
                    <input asp-for="UsernameOrEmail" class="form-control" placeholder="Username or Email">
                </div>
                <div class="mb-3">
                    <input asp-for="Password" class="form-control" placeholder="Password">
                </div>
                <div class="mb-3 form-check">
                    <input asp-for="RememberMe" class="form-check-input" id="exampleCheck1">
                    <label asp-for="RememberMe" class="form-check-label" for="exampleCheck1">Remember Me</label>
                </div>
                <div class="mb-3">
                    <div asp-validation-summary="ModelOnly"></div>
                </div>
                <div class="mb-3">
                    <a asp-action="Register" style="text-decoration:none">Need Account?</a>
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
        <div class="col-lg-3"></div>

    </div>
</div>

